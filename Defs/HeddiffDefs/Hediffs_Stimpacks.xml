<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <HediffDef>
        <defName>STALKER_Hediff_SimpleStimpack</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>simple stimpack</label>
        <description>simple stimpack dose increasing healing speed and reducing bleeding.</description>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.5</severityPerDay>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>3500</disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <hungerRateFactor>1.75</hungerRateFactor>
                <naturalHealingFactor>0.5</naturalHealingFactor>
                <totalBleedFactor>0.2</totalBleedFactor>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>STALKER_Hediff_MilitaryStimpack</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>military stimpack</label>
        <description>military stimpack dose increasing healing speed, reducing bleeding and pain.</description>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.5</severityPerDay>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>4500</disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <hungerRateFactor>1.50</hungerRateFactor>
                <painOffset>-0.20</painOffset>
                <naturalHealingFactor>0.7</naturalHealingFactor>
                <totalBleedFactor>0.5</totalBleedFactor>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>STALKER_Hediff_ScientificStimpack</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>scientific stimpack</label>
        <description>scientific stimpack dose increasing healing speed and radiation resistance as well as reducing bleeding and pain.</description>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.5</severityPerDay>
            </li>
            <li Class="HediffCompProperties_Disappears">
                <disappearsAfterTicks>5500</disappearsAfterTicks>
            </li>
        </comps>
        <stages>
            <li>
                <statOffsets>
                    <ToxicSensitivity>-0.80</ToxicSensitivity>
                </statOffsets>
                <hungerRateFactor>1.25</hungerRateFactor>
                <painOffset>-0.20</painOffset>
                <naturalHealingFactor>1</naturalHealingFactor>
                <totalBleedFactor>0.3</totalBleedFactor>
            </li>
        </stages>
    </HediffDef>

</Defs>