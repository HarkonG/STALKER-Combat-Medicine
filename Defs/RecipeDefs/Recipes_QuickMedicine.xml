        <description>Make an simple medkit x4.</description>
        <jobString>Making simple medkit x4.</jobString>
        <workAmount>80</workAmount>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>MedicineHerbal</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>MedicineHerbal</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <STALKER_SimpleMedkit>4</STALKER_SimpleMedkit>
