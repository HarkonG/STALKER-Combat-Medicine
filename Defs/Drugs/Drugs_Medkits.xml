<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <ThingDef ParentName="MakeableDrugPillBase">
        <defName>STALKER_SimpleStimpack</defName>
        <label>simple stimpack</label>
        <description>Stimpacks deliver medical compounds directly into the user's bloodstream, improving his medical condition and combat capabilities.\n\nSimple or improvised stimpacks are popular among novice stalkers as they are easy to obtain and inexpensive. Produced in the zone from commonly available ingredients, without proper equipment and purification. This is the cause of many side effects which include headache, paranesthesia and considerable increase in nutrition demand.</description>
        <techLevel>Industrial</techLevel>
        <stackLimit>25</stackLimit>
        <descriptionHyperlinks>
            <HediffDef>STALKER_Hediff_SimpleStimpack</HediffDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Things/Item/Drug/StalkerStimpack/Basic</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <socialPropernessMatters>false</socialPropernessMatters>
        <rotatable>false</rotatable>
        <statBases>
            <WorkToMake>80</WorkToMake>
            <MarketValue>35</MarketValue>
            <Mass>0.12</Mass>
            <Flammability>0.4</Flammability>
        </statBases>
        <ingestible>
            <drugCategory>Medical</drugCategory>
            <ingestSound>Ingest_Inject</ingestSound>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>STALKER_Hediff_SimpleStimpack</hediffDef>
                    <severity>1.0</severity>
                </li>
            </outcomeDoers>
        </ingestible>
        <recipeMaker>
            <researchPrerequisite>STALKER_Research_QuickMedicine</researchPrerequisite>
            <recipeUsers>
                <li>DrugLab</li>
            </recipeUsers>
            <soundWorking>Recipe_Drug</soundWorking>
        </recipeMaker>
        <costList>
            <STALKER_SimpleMedkit>1</STALKER_SimpleMedkit>
            <Steel>3</Steel>
        </costList>
        <comps>
            <li Class="CompProperties_Drug">
                <listOrder>200</listOrder>
                <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
            </li>
        </comps>
    </ThingDef>

